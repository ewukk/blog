{% extends 'base.html.twig' %}

{% block title %}
    {{ 'categories'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Formula 1 blog - categories'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="buttons">
        <thead>
        <tr>
            <th><a href="{{ url('category_create') }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-light' }}">
                    {{ 'create a category'|trans }}
                </a></th>
            <th><a href="{{ url('post_index') }}"  class="{{ 'btn btn-light' }}">
                    {{ 'posts'|trans }}
                </a></th>
            <th><a href="{{ url('tag_index') }}"  class="{{ 'btn btn-light' }}">
                    {{ 'tags'|trans }}
                </a></th>
        </tr>
        </thead>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created_at'|trans, 'category.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Updated_at'|trans, 'category.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'category.title') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.createdAt|format_date('long') }}</td>
                    <td>{{ category.updatedAt|format_date('long') }}</td>
                    <td>{{ category.title }}</td>
                    <td>
                        <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-outline-dark">
                            {{ 'edit'|trans }}
                        </a>
                        <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-outline-dark">
                            {{ 'delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}