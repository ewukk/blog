{% extends 'base.html.twig' %}

{% block title %}
    {{ 'categories'|trans }}
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">Formula 1 blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href={{ url('category_index') }}>Categories<span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href={{ url('post_index') }}>Posts</a>
                <a class="nav-item nav-link" href={{ url('tag_index') }}>Tags</a>
                <a class="nav-item nav-link" href={{ url('comment_index') }}>Comments</a>
                <a class="nav-item nav-link" href={{ url('user_index') }}>Users</a>
                {% if app.user %}
                    <a id="logout" class="nav-item nav-link" href="{{ path('app_logout') }}">Logout: {{ app.user.userIdentifier }}</a>
                {% endif %}
            </div>
        </div>
    </nav>
    <h1>{{ 'Formula 1 blog - categories'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="buttons">
        <thead>
        <tr>
            <th><a href="{{ url('category_create') }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-light' }}">
                    {{ 'create a category'|trans }}
                </a>
            </th>
        </tr>
        </thead>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created_at'|trans, 'category.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Updated_at'|trans, 'category.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'category.title') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.createdAt|format_date('long') }}</td>
                    <td>{{ category.updatedAt|format_date('long') }}</td>
                    <td>{{ category.title }}</td>
                    <td>
                        {% if is_granted('EDIT', category) %}
                            <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-outline-dark">
                                {{ 'edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('VIEW', category) %}
                            <a href="{{ url('category_show', {id: category.id}) }}" title="{{ 'action.show'|trans }}" class="btn btn-outline-dark">
                                {{ 'show'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', category) %}
                            <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-outline-dark">
                                {{ 'delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}