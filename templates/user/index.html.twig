{% extends 'base.html.twig' %}

{% block title %}
    {{ 'users'|trans }}
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand mb-0 h1">Formuła 1 blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href={{ url('user_index') }}>Użytkownicy<span class="sr-only">(aktualnie)</span></a>
                <a class="nav-item nav-link" href={{ url('category_index') }}>Kategorie</a>
                <a class="nav-item nav-link" href={{ url('tag_index') }}>Tagi</a>
                <a class="nav-item nav-link" href={{ url('post_index') }}>Posty</a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ url('user_edit', {id: app.user.id}) }}" title="{{ 'action.show'|trans }}" class="{{ 'nav-item nav-link' }}">
                        {{ 'Konto'|trans }}
                    </a>
                {% endif %}
                <a id="logout" class="nav-item nav-link" href="{{ path('app_logout') }}">Wyloguj: {{ app.user.userIdentifier }}</a>
            </div>
        </div>
    </nav>
    <h1>{{ 'Formuła 1 blog - użytkownicy'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'user.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Email'|trans, 'user.email') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-success">
                            {{ 'edytuj'|trans }}
                        </a>
                        <a href="{{ url('user_show', {id: user.id}) }}" title="{{ 'action.show'|trans }}" class="btn btn-warning">
                            {{ 'zobacz'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}