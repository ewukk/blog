{% extends 'base.html.twig' %}

{% block title %}
    {{ 'User details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'User details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'Id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'Email'|trans }}</dt>
            <dd>{{  user.email }}</dd>
            <dt>{{ 'Password'|trans }}</dt>
            <dd>{{  user.password }}</dd>
        </dl>
        <p>
            <a href="{{ url('post_index') }}" title="{{ 'action.back_to_posts'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'back to posts'|trans }}
            </a>
            <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.edit_email'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'edit email'|trans }}
            </a>
            <a href="{{ url('edit_password', {id: user.id}) }}" title="{{ 'action.edit_password'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'edit password'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}