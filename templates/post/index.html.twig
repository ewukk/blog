{% extends 'base.html.twig' %}

{% block title %}
    {{ 'posts'|trans }}
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">Formula 1 blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href={{ url('post_index') }}>Posts <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href={{ url('category_index') }}>Categories</a>
                <a class="nav-item nav-link" href={{ url('tag_index') }}>Tags</a>
                <a class="nav-item nav-link" href={{ url('user_index') }}>Users</a>
            </div>
        </div>
    </nav>

    <h1>{{ 'Formula 1 blog'|trans }}</h1>

    <table class="buttons">
        <thead>
        <tr>
            <th><a href="{{ url('post_create') }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-light' }}">
                    {{ 'create a post'|trans }}
                </a></th>
        </tr>
        </thead>
    </table>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'post.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created_at'|trans, 'post.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Updated_at'|trans, 'post.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'post.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Category'|trans, 'category.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Content'|trans, 'post.content') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Comment'|trans, 'post.comment') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Author'|trans, 'post.author.username') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination.items %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.createdAt|format_date('long') }}</td>
                    <td>{{ post.updatedAt|format_date('long') }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.category.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.comment }}</td>
                    <td>{{ post.author.username }}</td>
                    <td>
                        {% if is_granted('VIEW', post) %}
                            <a href="{{ url('post_show', {id: post.id}) }}" title="{{ 'action.show'|trans }}" class="btn btn-outline-dark">
                                {{ 'show'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', post) %}
                            <a href="{{ url('post_edit', {id: post.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-outline-dark">
                                {{ 'edit'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', post) %}
                            <a href="{{ url('post_delete', {id: post.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-outline-dark">
                                {{ 'delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}