{% extends 'base.html.twig' %}

{% block title %}
    {{ 'posts'|trans }}
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand mb-0 h1">Formuła 1 blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href={{ url('post_index') }}>Posty<span class="sr-only">(aktualnie)</span></a>
                <a class="nav-item nav-link" href={{ url('category_index') }}>Kategorie</a>
                <a class="nav-item nav-link" href={{ url('tag_index') }}>Tagi</a>
                <a class="nav-item nav-link" href={{ url('comment_index') }}>Komenatarze</a>

                {% if is_granted('MANAGE') %}
                    <a class="nav-item nav-link" href={{ url('user_index') }}>Użytkownicy</a>
                {% endif %}
                <a class="nav-item nav-link float-right" href="{{ path('app_logout') }}">Wyloguj: {{ app.user.userIdentifier }}</a>

            </div>
        </div>
    </nav>

    <h1>{{ 'Formuła 1 blog'|trans }}</h1>

    <table class="buttons">
        <thead>
        <tr>
            <th><a href="{{ url('post_create') }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-light' }}">
                    {{ 'stwórz post'|trans }}
                </a></th>
        </tr>
        </thead>
    </table>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'post.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created_at'|trans, 'post.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Updated_at'|trans, 'post.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'post.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Category'|trans, 'category.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Tag'|trans, 'tag.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Content'|trans, 'post.content') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Author'|trans, 'post.author.username') }}</th>

                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination.items %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.createdAt|format_date('long') }}</td>
                    <td>{{ post.updatedAt|format_date('long') }}</td>
                    <td>{{ post.title }}</td>
                    <td>
                        <a href="{{ url('post_index', {'filters.category_id' : post.category.id}) }}" title="{{ post.category.title }}" class="{{ 'btn btn-outline-success' }}">
                        {{ post.category.title }}
                        </a>
                    </td>
                    <td>
                        {% if post.tags is defined and post.tags|length %}
                            {% for tag in post.tags %}
                                <a href="{{ url('post_index', {'filters.tag_id' : tag.id}) }}" title="{{ tag.title }}" class="{{ 'btn btn-outline-primary' }}">
                                    {{ tag.title }}
                                </a>
                            {% endfor %}
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.author.username }}</td>

                    <td>
                        {% if is_granted('VIEW', post) %}
                            <a href="{{ url('post_show', {id: post.id}) }}" title="{{ 'action.show'|trans }}" class="{{ 'btn btn-warning' }}">
                                {{ 'zobacz'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', post) %}
                            <a href="{{ url('post_edit', {id: post.id}) }}" title="{{ 'action.edit'|trans }}" class="{{ 'btn btn-success' }}">
                                {{ 'edytuj'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', post) %}
                            <a href="{{ url('post_delete', {id: post.id}) }}" title="{{ 'action.delete'|trans }}" class="{{ 'btn btn-danger' }}">
                                {{ 'usuń'|trans }}
                            </a>
                        {% endif %}
                            <a href="{{ url('comment_create', {id: post.id}) }}" title="{{ 'action.create'|trans }}" class="{{ 'btn btn-secondary' }}">
                                {{ 'dodaj komentarz'|trans }}
                            </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}