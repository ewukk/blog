{% extends 'base.html.twig' %}

{% block title %}
    {{ 'post details'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Post details'|trans({'%id%': post.id|default('')}) }}</h1>
    {% if post is defined and post|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'Id'|trans }}</dt>
            <dd>{{ post.id }}</dd>
            <dt>{{ 'Created_at'|trans }}</dt>
            <dd>{{ post.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Updated_at'|trans }}</dt>
            <dd>{{ post.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'Title'|trans }}</dt>
            <dd>{{  post.title }}</dd>
            <dt>{{ 'Author'|trans }}</dt>
            <dd>{{  post.author.username }}</dd>
            <dt>{{ 'Category'|trans }}</dt>
            <dd>{{  post.category.title }}</dd>
            <dt>{{ 'Tags'|trans }}</dt>
            <dd>
                {% for tag in post.tags %}
                    {{ tag.title }},
                {% endfor %}
            </dd>
            <dt>{{ 'Content'|trans }}</dt>
            <dd>{{  post.content }}</dd>
        </dl>
        <p>
            <a href="{{ url('post_index') }}" title="{{ 'action.back_to_posts'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'back to posts'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}