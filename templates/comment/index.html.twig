{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Formula 1 blog - komentarze'|trans }}
{% endblock %}

{% block body %}

    <h1>{{ 'Formuła 1 blog - komentarze'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'comment.id') }}</th>
                <th>{{ 'Post title'|trans }}</th>
                <th>{{ 'Author'|trans }}</th>
                <th>{{ 'Content'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in pagination.items %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.post.title }}</td>
                    <td>{{ comment.author.username }}</td>
                    <td>{{ comment.content }}</td>
                    <td>
                        {% if is_granted('VIEW', comment) %}
                            <a href="{{ url('comment_show', {id: comment.id}) }}" title="{{ 'action.show'|trans }}" class="btn btn-warning">
                                {{ 'zobacz'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('EDIT', comment) %}
                            <a href="{{ url('comment_edit', {id: comment.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-success">
                                {{ 'edytuj'|trans }}
                            </a>
                        {% endif %}
                        {% if is_granted('DELETE', comment) %}
                            <a href="{{ url('comment_delete', {id: comment.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-danger">
                                {{ 'usuń'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}