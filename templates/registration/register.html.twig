<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}rejestracja{% endblock %}</title>
    {% block stylesheets %}
        <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
                rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>

{% block body %}
<h1>Zarejestruj się</h1>
{{ form_start(form) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        }%}
    {% endif %}
    {{ form_widget(form) }}

<div class="form-group row float-lg-right">
    <button class="btn btn-lg btn-light" type="submit">
        Zapisz
    </button>
    <a href="{{ url('app_login') }}" title="{{ 'login'|trans }}" class="{{ 'btn btn-lg btn-outline-light' }}">
        {{ 'powrót'|trans }}
    </a>
</div>
    {{ form_end(form) }}
    {% endblock %}

</body>
</html>